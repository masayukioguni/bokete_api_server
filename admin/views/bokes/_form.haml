- error = @boke.errors.include?(:boke_id)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :boke_id, :class => 'control-label'
  .controls
    =f.text_field :boke_id, :class => 'input-xlarge input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:boke_id, :class => 'text-error') : pat(:example)
- error = @boke.errors.include?(:boke)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :boke, :class => 'control-label'
  .controls
    =f.text_field :boke, :class => 'input-xlarge input-with-feedback'
    %span.help-inline=error ? f.error_message_on(:boke, :class => 'text-error') : pat(:example)

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:bokes, :index), :class => 'btn'
